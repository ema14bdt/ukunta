<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>

   <body class="addProduct">
      <%- include('partials/carrito.ejs') %>
        <header class="header">
            <%- include('partials/navbar-top.ejs') %>
        </header>
        <!-- Barra de navegación inferior -->
        <%- include('partials/navbar-bottom.ejs') %>

        <main class="container maxw-768 mbt-5 mx-auto">
         <div class="mb-12 f-main-y">
            <!-- TITULO -->
            <div class="register__header">
               <i class='bx bx-shopping-bag'></i>
                <h3 class="register__title">CREACIÓN DE PRODUCTO</h3>
            </div>

            <form class="form-addProduct">
               <!-- NOMBRE -->
               <div class="controlador-input">
                   <label for="name" data-required>Nombre del producto</label>
                   <input type="text" name="name" id="name" class="reg__input" placeholder="ALE STOUT NEGRA"
                   title="Debe ingresar un nombre"
                   pattern="^[A-Za-zñÑáÁéÉiÍóÓúüÚÜ]{2,45}(\s+[A-Za-zñÑáÁéÉiÍóÓúüÚÜ]{2,45}){0,2}$"
                   required>
               </div>

               <!-- CATEGORÍA -->
               <div class="controlador-input">
                  <label for="category" data-required>Elige una categoría</label>
                  <select name="categoryId" class="reg__input" id="category"
                  title="Debes seleccionar una categoría."
                  pattern="^[1-3]$"
                  required>
                      <option value="" selected disabled>Elige una categoría</option>
                  </select>
               </div>

               <!-- MEDIDAS -->
               <div class="controlador-input">
                  <label for="size">Tamaño o volumen:</label>
                  <input type="text" name="size" id="size" class="reg__input" placeholder="300cc"
                  title="Máximo 15 caracteres"
                  maxlength="15"
                  pattern="^.{0,15}$"
                  data-required="optional">
               </div>

               <!-- FECHA VENCIMIENTO -->
               <div class="controlador-input">
                  <label for="expire" data-required>Fecha de vencimiento</label>
                  <input type="date" name="expire" id="expire" class="reg__input" placeholder="7/11/2025"
                  title="Formato de fecha invalido."
                  pattern="^([12]\d{3}-(0[1-9]|1[0-2])-(0[1-9]|[12]\d|3[01]))$"
                  required>
               </div>

               <!-- STOCK -->
               <div class="controlador-input">
                  <label for="stock" data-required>Stock del producto</label>
                  <input type="number" name="stock" id="stock" class="reg__input" placeholder="24"
                  title="Debe ingresar solo números"
                  pattern="^[0-9]{1,4}$"
                  min="0"
                  required>
               </div>

               <!-- PRECIO -->
               <div class="controlador-input">
                  <label for="price" data-required>Precio del producto</label>
                  <input type="number" name="price" id="price" class="reg__input" placeholder="99,99"
                  title="Debe ingresar un precio válido Ej; 99,99"
                  pattern="^\d{1,4}([\.|,]\d{1,2})?$"
                  step=".5"
                  min="0"
                  required>
               </div>

               <!-- IMÁGENES -->
               <div class="controlador-input">
                  <label for="producto-images-input" data-required>Agrega mínimo una imagen</label>
                  <input type="file" title="Agrega una imagen .jpg, .png no mayor a 5MB" name="images" class="d-none" id="producto-images-input" accept="image/png, image/jpeg" multiple>
                  <div class="concon controlador-add-image">
                     <!-- Insertar imagenes previas aquí -->
                     <div class="mb-6 tb-3 addImage bx bx-image-add"></div>
                  </div>
               </div>

               <!-- DESCRIPCIÓN -->
               <div class="controlador-input">
                  <label for="description" data-required>Descripción del producto</label>
                  <textarea type="text" name="description" id="description" class="form-textarea" placeholder="Descripción.."
                  title="La descripción debe tener un mínimo de 10 caracteres y un máximo de 255"
                  pattern="^.{10,255}$"
                  required></textarea>
               </div>

               <div class="register-command">
                  <button class="btn btn-danger ghost btn-modal btn-modal-secondary btn-form-cancel" type="button">MEJOR LUEGO</button>
                  <button class="btn btn-primary ghost btn-modal btn-modal-primary btn-form">CREAR PRODUCTO</button>
               </div>

            </form>
         </div>
        </main>
      
      <script src="/js/generals.js" type="module"></script>  
      <script src="/js/addProduct.js" type="module"></script>
   </body>

</html>