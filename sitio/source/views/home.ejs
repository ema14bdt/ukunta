<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head.ejs') %>

    <body class="home">
        <%- include('partials/carrito.ejs') %>
        <header class="header"><%- include('partials/navbar-top.ejs') %></header>
        <!-- Barra de navegación inferior -->
        <%- include('partials/navbar-bottom.ejs') %>
        <main data-observer>       
            <%- include('partials/carousel.ejs') %>
            <div class="container ukunta-header-mb-tb">
                <div class="mb-12">
                    <img src="/images/logo/logo.svg" alt="UkuntaHeader">
                </div>
            </div>
            
            <%- include('partials/categories.ejs') %>
            <section class="combos sep-inf" id="combos">
                <article>
                    <h3 class="mx-4 my-2 seccion__title">COMBOS</h3>
                    <div class="combos__carrousel">
                        <img src="/images/carrouselCombo-1.png" alt="black-off" />
                    </div>
                    <a href="/store" class="button-ghost">TIENDA</a>
                </article>
            </section>
        </main>  

        <section class="contacto" id="contacto" data-observer>
            <article class="container f-wrap">
                <h3 class="mb-12 seccion__title">CONTÁCTENOS</h3>
                <div class="mb-12 tb-6 contacto__form">
                    <form name="f-contact" class="f-contact" action="/home#contacto" method="POST">
                        <!-- Nombre -->
                        <% if(locals && locals.errors.name) {%>
                        <label for="name" class="text-danger"> <%= errors.name.msg %> </label>
                        <% } %>
                        <input
                            type="text"
                            name="name"
                            placeholder="Escriba su nombre"
                            class="contacto__input"
                            value="<%= (locals && locals.errors) ? old.name : null %>"
                            title="Escriba un nombre válido"
                            pattern="^[A-Za-zñÑáÁéÉiÍóÓúüÚÜ]{2,20}(\s+[A-Za-zñÑáÁéÉiÍóÓúüÚÜ]{2,20}){0,2}$"
                            required
                        />
                        <!-- email -->
                        <% if(locals && locals.errors.email) {%>
                        <label for="name" class="text-danger"> <%= errors.email.msg %> </label>
                        <% } %>
                        <input
                            type="email"
                            name="email"
                            placeholder="Escriba su correo electrónico"
                            class="contacto__input"
                            title="Escribe un correo válido"
                            value="<%= (locals && locals.errors) ? old.email : null %>"
                            pattern="^[a-z]+(\.[_a-z0-9]+)*@[a-z0-9-]+(\.[a-z0-9-]+)*(\.[a-z]{2,15})$"
                            required
                        />
                        <!-- Comentario -->
                        <% if(locals && locals.errors.comment) {%>
                        <label for="name" class="text-danger"> <%= errors.comment.msg %> </label>
                        <% } %>
                        <textarea
                            name="comment"
                            cols="30"
                            rows="10"
                            placeholder="Escriba un comentario"
                            class="contacto__textarea"
                            minlength="10"
                            maxlength="255"
                            title="Escribe un comentario de 10 a 255 caracteres"
                            data-pattern="^.{10,255}$"
                            required
                        ></textarea>
                        <input type="submit" value="ENVIAR" class="contacto__button" />
                    </form>
                </div>
                <div class="contacto__map no-mb tb-6">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d17198.63439706699!2d10.755380614092434!3d59.91427007484662!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46416e61f267f039%3A0x7e92605fd3231e9a!2sOslo%2C%20Noruega!5e0!3m2!1ses-419!2sar!4v1624465883454!5m2!1ses-419!2sar"
                        style="border: 0"
                        allowfullscreen=""
                        loading="lazy"
                    ></iframe>
                </div>
            </article>

            <div class="contacto__map mbt-4 only-mb">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d17198.63439706699!2d10.755380614092434!3d59.91427007484662!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x46416e61f267f039%3A0x7e92605fd3231e9a!2sOslo%2C%20Noruega!5e0!3m2!1ses-419!2sar!4v1624465883454!5m2!1ses-419!2sar"
                    style="border: 0"
                    allowfullscreen=""
                    loading="lazy"
                ></iframe>
            </div>
        </section>

        
        <%- include('partials/footer.ejs') %>
        
        <!-- Scripts generales -->
        <script src="/js/generals.js" type="module"></script>
        
        <!-- Scripts propios del home Home -->
        <script src="/js/carousel.js"></script>
        <script src="/js/main.js" type="module"></script>
        <script src="/js/search.js"></script>
    </body>
</html>
